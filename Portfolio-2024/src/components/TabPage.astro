---
interface Props {
    content: {
            title: string;
            subtitle: string;
            paragraphs: string[];
            key: string;
    };
}

const { content } = Astro.props;



---
<div id={content.key} class="expirence-tab--content">
    <div class="expirence-tab--container">
        <aside>
            <h3>{content.title}</h3>
            <h4>{content.subtitle}</h4>
                <ul>
                    {
                        content.paragraphs.map((paragraph, index) => (
                            <li id={index.toString()}>
                                <p>{paragraph}</p>
                            </li>
                        ))
                    }
                </ul>
        </aside>
    </div>
</div>

<style>
    .expirence-tab--content {
        display: none;
    }

    .expirence-tab--container {
        display: flex;
        justify-content: space-evenly;

        gap: 50px
    }

    .expirence-tab--content h3 {
        font-size: 2.2rem;
        font-weight: 500;

        color: var(--white-main);
    }
    .expirence-tab--content h4 {
        font-size: 1.6rem;
        font-weight: 300;
        color: var(--grey-light);
        margin-bottom: 10px;
    }
    .expirence-tab--content ul {
        padding: 0px;
        margin: 0px;
        list-style: none;
    }
    
    .expirence-tab--content ul li {
        position: relative;
        padding-left: 30px;
        margin-bottom: 10px;
        font-size: 2.3rem;
    }
    .expirence-tab--content ul li::before {
        content: "â–¹";
        position: absolute;
        left: 0px;
        color: var(--white-main);
    }

    .expirence-tab--content p {
        font-size: 1.3rem;
        font-weight: lighter;
        color: var(--white-main);
        line-height: 30px;

        text-align: justify;
    }

</style>
