---
import type { ICollaborator } from "../../interfaces/ICollaborator";
import CollaboratorsGrid from "../react/Collaborators.grid";

interface Props {
    collaborators: Array<ICollaborator>;
}

const { collaborators } = Astro.props as Props;
---

<section id="collaborator">
    <div class="collaborator-title">
        <h2 class="hidden">Colaboraciones</h2>
    </div>
    <div class="collaborator-content">
        <CollaboratorsGrid collaborators={collaborators} />
    </div>
</section>

<style>
    section {
        background-color: var(--black-tertiary);
        color: white;

        padding: 100px 150px;
    }

    .collaborator-title {
        display: flex;
        justify-content:center;

        padding: 20px 50px;

        margin-bottom: 20px;
        text-align: center;
    }

    .collaborator-title h2 {
        font-weight: 300;
        font-size: var(--text-xxl);
        color: var(--white-main);
        margin-right: 10px;
        white-space: nowrap;
        border-right: 4px solid;
        overflow: hidden;
        opacity: 0;
        visibility: hidden;
        width: 15ch;
        transition: opacity 0.5s ease-in-out, visibility 0.5s ease-in-out;
    }

    .collaborator-title h2.show {
        opacity: 1;
        visibility: visible;
        animation: typing 1s steps(12) forwards, blink 0.5s infinite step-end alternate;
    }

    .collaborator-content {
        max-width: 800px;
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .collaborator-content h3 {
        font-size: var(--text-xl);
        font-weight: 400;
        margin-bottom: 16px;
        margin-right: 10px;
        white-space: nowrap;
        border-right: 4px solid;
        overflow: hidden;
        opacity: 0;
        visibility: hidden;
        width: 12ch;
        transition: opacity 0.5s ease-in-out, visibility 0.5s ease-in-out;
    }

    .collaborator-content h3.show {
        opacity: 1;
        visibility: visible;
        animation: typing 1s steps(12) forwards, blink 0.5s infinite step-end alternate;
    }

  
    .hidden {
        opacity: 0;
        visibility: hidden;
        transform: translateY(50px);
        transition: all 0.5s ease-in-out;
    }

    .show {
        visibility: visible;
        opacity: 1;
        transform: translateY(0);
    }

   
    @keyframes typing {
        from {
            width: 0;
        }
    }

    @keyframes blink {
        50% {
            border-color: transparent;
        }
        100% {
            border-color: transparent;
        }
    }
    @media (max-width: 1200px) {
        section {
            padding: 90px 120px;
        }
    }

    @media (max-width: 992px) {
        section {
            padding: 90px 90px;
        }

        .collaborator-title h2 {
            font-size: var(--text-xl);
        }

        .collaborator-content h3 {
            font-size: var(--text-lg);
        }

        
    }

    @media (max-width: 768px) {
        section {
            padding: 60px 50px;
        }
    }

    @media (max-width: 576px) {
        section {
            padding: 40px 20px;
        }

        .collaborator-title h2 {
            font-size: var(--text-lg);
        }

        .collaborator-content h3 {
            font-size: var(--text-md);
        }
    }
</style>
