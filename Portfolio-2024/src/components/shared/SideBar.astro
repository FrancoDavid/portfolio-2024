---
import Button from "./Button.astro"
---
<side-bar>
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <img id="close" src="/imgs/close.svg" alt="Cerrar"/>
        </div>
        <div class="sidebar-body">
            <a href="#about">Sobre mi</a>
            <a href="#portfolio">Portafolio</a>
            <a href="#contact">Contacto</a>
            <Button type="button" key="download-cv">Descargar CV</Button>
        </div>
    </aside>
</side-bar>



<style>
    .sidebar {
        position: fixed;
        top: 0;
        right: -50%;
        width: 50%;
        height: 100vh;
        background-color: var(--black-secondary);
        color: white;
        transition: right 0.3s ease;
        z-index: 1001;
    }

    .sidebar-header {
        display: flex;
        justify-content: end;

        padding: 16px 8px;

        cursor: pointer;
    }

    .sidebar-body {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;

        font-size: 2rem;
    }

    .sidebar-body a {
        color: var(--white-main);
        font-size: var(--text-sm);
        text-decoration: none;
    }
</style>


<script>
    import { Notyf } from 'notyf';
    import { downloadCvService } from '../../services/downloadCv';    
    class SideBar extends HTMLElement {
        notyf;
        btnDownloadCV: HTMLButtonElement;

        constructor() {
            super();

            this.notyf = new Notyf({
                duration: 2000,
                position: {
                    x: 'left',
                    y: 'top',
                }
            });
            this.btnDownloadCV = this.querySelector("#download-cv") as HTMLButtonElement;

            this.handlerClose();
            this.handleDownloadCV();
        }

        handlerClose() {
            const closeElement = this.querySelector('#close') as HTMLImageElement;
            const sideBar = this.querySelector('#sidebar') as HTMLElement;

            closeElement?.addEventListener('click', () => {
                sideBar.style.right = "-50%";
            });
        }

        handleDownloadCV() {
            this.btnDownloadCV?.addEventListener("click", () => {
                downloadCvService()
                    .then(() => this.notyf.success('Descarga Ã©xitosa'))
            });
        }
    }

    customElements.define('side-bar', SideBar);
</script>