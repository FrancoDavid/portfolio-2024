---

const { title } = Astro.props;

---
<accordion-ui>
    <div class="accordion">
        <div class="accordion-item">
            <button class="accordion-header">{title}</button>
            <div class="accordion-content">
                <div class="accordion-slot">
                    <slot></slot>
                </div>
            </div>
        </div>
    </div>
</accordion-ui>

<style>
    .accordion-item {
        border-bottom: 1px solid #333;
        overflow: hidden;
    }

    .accordion-header {
        width: 100%;
        background: none;
        border: none;
        color: var(--white-main);
        font-size: var(--text-lg);
        font-family: var(--font-family);
        text-align: left;
        padding: 15px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .accordion-header:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .accordion-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease-out;
    }

    .accordion-item.active .accordion-content {
        max-height: 250px;
    }

    .accordion-content ul {
        padding: 10px 20px;
        text-align: left;
    }

    .accordion-slot {
        padding: 10px 20px;
    }

    /* @media (min-width: 768px) {
        .accordion-item.active .accordion-content {
            max-height: 400px;
        }
    } */
</style>

<script>
    class AccordionUi extends HTMLElement {
        constructor() {
            super();
            this.handleCollapser();
        }

        handleCollapser() {
            const accordions = this.querySelectorAll(".accordion-item");

            accordions.forEach((item) => {
                const elementSelected = item.querySelector(".accordion-header");
                if (elementSelected) {
                    elementSelected.addEventListener("click", function () {
                        item.classList.toggle("active");
                    });
                }
            });
        }
    }

    customElements.define("accordion-ui", AccordionUi);
</script>
